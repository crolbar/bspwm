# crolbar

# terminal emulator
super + x
	alacritty 

# program launcher
super + r
	dmenu_run -nb black -sb '#6600CC'

# file explorer
super + e
	thunar

# browser
super + b
	firefox

# bspwm hotkeys

# quit/restart bspwm
super + ctrl + {q,r}
	bspc {quit,wm -r}

# close 
super + shift +  q
	bspc node -{c}

# alternate between the tiled and monocle layout
super + z
	bspc desktop -l next

# set the window state
super + {d,shift + space,f}
	bspc node -t {tiled,floating,fullscreen}

# focus the node in the given direction
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# focus the last desktop
super + grave
	bspc desktop -f last

# focus the last node
alt + Tab
	bspc node -f last

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d } '^{1-9,10}'

# preselect the direction
super + shift + {a,s,w,d}
	bspc node -p {west,south,north,east}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel



